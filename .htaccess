# ROOT .htaccess (next to /public)
RewriteEngine On

# If we're already under /public, do nothing (avoid loops)
RewriteCond %{REQUEST_URI} ^/public/
RewriteRule ^ - [L]

# If the target exists inside /public, serve it directly (files or dirs)
RewriteCond %{DOCUMENT_ROOT}/public%{REQUEST_URI} -f [OR]
RewriteCond %{DOCUMENT_ROOT}/public%{REQUEST_URI} -d
RewriteRule ^ public%{REQUEST_URI} [L]

# Otherwise, send everything to Laravel's front controller
RewriteRule ^ public/index.php [L]
