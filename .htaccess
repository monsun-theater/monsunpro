# $HOME/htdocs/.htaccess  (ROOT)
RewriteEngine On

# 1) If request already targets /public, do nothing (avoid loops)
RewriteCond %{REQUEST_URI} ^/public/
RewriteRule ^ - [L]

# 2) If a real file/dir exists at root, serve it
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 3) If a real file/dir exists inside /public, serve that
RewriteCond %{DOCUMENT_ROOT}/public/$1 -f [OR]
RewriteCond %{DOCUMENT_ROOT}/public/$1 -d
RewriteRule ^ public/$1 [L]

# 4) Otherwise route everything once to Laravel's front controller
RewriteRule ^ public/index.php [L]
